{{#each posts as |post|}} 
{{!-- "posts" is routed from your controller
"post" stands for each post from the "posts" array --}}
{{!-- {{> post-content}} --}}
<div class="max-w-4xl px-10 my-4 py-6 bg-white rounded-lg shadow-md">
  <div class="flex justify-between items-center">
    <span class="font-light text-gray-600">{{format_date date_created}}</span>
  </div>
  <div class="mt-2">
    <a
      class="text-2xl text-gray-700 font-bold hover:text-gray-600"
      href="/post/{{post.id}}"
    >{{title}}</a>
    <p class="mt-2 text-gray-600">{{content}}</p>
  </div>
  <div class="flex justify-between items-center mt-4">
    <div>
      <a class="flex items-center" href="#">
        <h1 class="text-gray-700 font-bold">{{user.name}}</h1>
      </a>
    </div>
  </div>
</div>
{{!-- "post-content" is your post-content.handlebars partial
It will add data for each post and render it in one of these components --}}
{{/each}}